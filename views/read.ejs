<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Users List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 p-10 min-h-screen">

    <h1 class="text-white text-2xl mb-6">All Users</h1>

    <div class="flex flex-wrap gap-6">
        <% users.forEach(user=> { %>
            <div class="bg-white rounded-xl shadow-lg p-4 w-60">
                <img src="<%= user.image %>" class="w-full h-28 object-cover rounded mb-2">
                <h2 class="font-bold">
                    <%= user.name %>
                </h2>
                <p class="text-sm text-zinc-600 mb-2">
                    <%= user.email %>
                </p>

                <div class="flex gap-2">
                    <a href="/edit/<%= user._id %>"
                        class="flex-1 bg-yellow-500 hover:bg-yellow-600 text-white py-1 rounded text-center">Edit</a>

                    <form action="/delete/<%= user._id %>" method="POST" class="flex-1">
                        <button type="submit"
                            class="bg-red-600 hover:bg-red-700 text-white py-1 rounded w-full">Delete</button>
                    </form>
                </div>
            </div>
            <% }) %>
    </div>

    <a href="/" class="block mt-6 text-blue-500 hover:underline">Create New User</a>

</body>

</html>